services:
  - type: web
    name: sentiment-platform-backend
    env: python
    region: oregon
    buildCommand: "./.render/build.sh"
    startCommand: "gunicorn integrated_server:app -b 0.0.0.0:$PORT"
gunicorn sentiment_backend.integrated_server:app -b 0.0.0.0:$PORT    plan: free
    autoDeploy: true
    envVars:
      - key: FLASK_ENV
        value: production
      - key: SECRET_KEY
        value: ${SECRET_KEY}  # Set this in Render dashboard (DO NOT hardcode it)

    buildFilter:
      paths:
        - sentiment_backend/**
        - sentiment_dashboard/**
        - .render/build.sh
        - render.yaml

    build:
      cwd: sentiment_backend
services:
  - type: web
    name: sentiment-backend
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn integrated_server:app -b 0.0.0.0:$PORT
    plan: free
    envVars:
      - key: FLASK_ENV
        value: production

  - type: web
    name: sentiment-frontend
    env: static
    buildCommand: cd sentiment_dashboard && npm install && npm run build
    staticPublishPath: sentiment_dashboard/build
    plan: free
